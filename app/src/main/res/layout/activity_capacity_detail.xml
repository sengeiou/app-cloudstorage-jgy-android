<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.guoyie.www.delivery.easy.activity.CapacityDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F4FE"
        android:orientation="vertical">
        <include
            android:id="@+id/title_bar"
            layout="@layout/public_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如需添加和修改储罐请前往PC端操作"
            android:textSize="15sp"
            android:textColor="#ff5722"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#fff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="储罐号"
                android:textColor="#919191"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_store_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12344556"
                android:textColor="#111111"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F1F4FE"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#fff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:textColor="#919191"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12344556"
                android:textColor="#111111"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F1F4FE"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#fff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空容数量"
                android:textColor="#919191"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_empty_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12344556"
                android:textColor="#111111"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F1F4FE"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#fff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库容数量"
                android:textColor="#919191"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_store_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12344556"
                android:textColor="#111111"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F1F4FE"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#fff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仓储价格(元/吨/月)"
                android:textColor="#919191"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_store_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12344556"
                android:textColor="#111111"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F1F4FE"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#fff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="储罐性质"
                android:textColor="#919191"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_capacity_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12344556"
                android:textColor="#111111"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F1F4FE"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#fff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注"
                android:textColor="#919191"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <!--<TextView-->
                <!--android:id="@+id/tv_ps"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="12344556"-->
                <!--android:textColor="#111111"-->
                <!--android:textSize="15sp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="20dp" />-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F1F4FE"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_ps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="12344556"
            android:textColor="#111111"
            android:textSize="15sp"
            android:background="#fff"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="20dp"/>
    </LinearLayout>
</layout>
