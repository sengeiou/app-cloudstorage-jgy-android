<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <!--1-->
        <LinearLayout
            style="@style/ll_interorder">
            <TextView
                android:text="车牌号"
                style="@style/tv_title_inter"/>
            <TextView
                android:id="@+id/carid"
                android:text="鄂A123456"
                style="@style/tv_content_inter"/>
        </LinearLayout>
        <!-- 2-->
        <LinearLayout
            style="@style/ll_interorder">
            <TextView

                android:text="司机姓名"
                style="@style/tv_title_inter"/>
            <TextView
                android:id="@+id/carname"
                android:text="柯军"
                style="@style/tv_content_inter"/>
        </LinearLayout>

        <!-- 3-->
        <LinearLayout
            style="@style/ll_interorder">
            <TextView
                android:text="联系方式"
                style="@style/tv_title_inter"/>
            <TextView
                android:id="@+id/mobilephone"
                android:text="1100000"
                style="@style/tv_content_inter"/>

        </LinearLayout>


        <!-- 4-->
        <LinearLayout
            style="@style/ll_interorder">
            <TextView
                android:text="身份证号"
                style="@style/tv_title_inter"/>
            <TextView
                android:id="@+id/idcard"
                android:text="325825196802144578"
                style="@style/tv_content_inter"/>
        </LinearLayout>


        <!-- 5-->
        <LinearLayout
            style="@style/ll_interorder">
            <TextView
                android:text="备注"
                style="@style/tv_title_inter"/>
            <TextView
                android:id="@+id/remark"
                android:text="CA签章以汉办好，请等"
                style="@style/tv_content_inter"/>
        </LinearLayout>

    </LinearLayout>

